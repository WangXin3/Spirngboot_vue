<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wxx.springbootvue.mapper.UserMapper">


    <select id="loadUserByUsername" resultType="com.wxx.springbootvue.dao.User">
        SELECT *
        FROM tb_user u
        WHERE u.username = #{username}
    </select>

    <select id="getUserRoleByUid" resultType="com.wxx.springbootvue.dao.Role">
        SELECT r.*
        FROM tb_user_role ur, tb_role r
        WHERE ur.role_id = r.id
        AND ur.user_id = #{id};
    </select>
</mapper>